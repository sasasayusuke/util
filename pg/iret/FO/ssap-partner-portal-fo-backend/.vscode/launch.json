  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: FastAPI",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "python": "/usr/local/bin/python",
      "args": [
        "app.main:app",
        "--host",
        // "0.0.0.0",
        "localhost",
        "--port",
        "9000",
        "--reload"
      ]
    },
    {
      "name": "Python: Batch Remind",
      "type": "python",
      "request": "launch",
      "program": "functions/batch_remind.py",
      "console": "integratedTerminal",
      "args": ["${input:remind_choice}", "${input:stage}"],
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    },
    {
      "name": "Python: Current File",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    }
  ],
  "inputs": [
    {
      "type": "pickString",
      "id": "remind_choice",
      "description": "choice execute param",
      "options": [
        "remind_karte",
        "schedule_survey",
        "remind_survey",
        "remind_manhour",
        "remind_current_program",
        "remind_next_program"
      ],
      "default": "remind_karte"
    },
    {
      "type": "pickString",
      "id": "stage",
      "description": "choice execute stage",
      "options": ["dev", "sqa", "sup", "evs"],
      "default": "dev"
    }
  ]
}
