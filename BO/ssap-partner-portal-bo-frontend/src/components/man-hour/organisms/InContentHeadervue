<template>
  <Sheet
    class="m-heading d-flex justify-space-between align-center px-8"
    height="60"
  >
    <compnent :is="tag" class="m-heading__title">
      <slot name="default" />
    </compnent>
    <div class="m-heading__ui d-flex align-center">
      <p v-if="$scopedSlots.date" class="m-heading__date font-size-xsmall">
        <slot name="date" />
      </p>
      <div class="m-heading__button ml-8">
        <Button outlined style-set="small-tertiary" @click="buttonAction2">
          {{
            isEditing
              ? $t('common.button.cancel')
              : $t('common.button.backToList')
          }}
        </Button>
        <Button style-set="small-primary" @click="buttonAction1">
          {{ isEditing ? $t('common.button.save') : $t('common.button.edit') }}
        </Button>
      </div>
    </div>
  </Sheet>
</template>

<script lang="ts">
import { Button, Card, Sheet } from '~/components/common/atoms/index'
import BaseComponent from '~/common/BaseComponent'

export default BaseComponent.extend({
  components: {
    Button,
    Card,
    Sheet,
  },
  computed: {
    tag() {
      return `${this.hx}`
    },
  },
  props: {
    hx: {
      type: String,
      default: 'h2',
    },
    isEditing: {
      type: Boolean,
      required: true,
    },
  },
  methods: {
    buttonAction1() {
      this.$emit('buttonAction1')
    },
    buttonAction2() {
      this.$emit('buttonAction2')
    },
  },
})
</script>

<style lang="scss" scoped>
.m-heading {
  border-bottom: 4px solid $c-primary-dark !important;
}
.m-heading__title {
  font-size: 1.25rem;
  font-weight: bold;
}
.m-heading__date {
  margin: 0;
  color: $c-black-60;
}
.m-heading__button {
}
</style>
